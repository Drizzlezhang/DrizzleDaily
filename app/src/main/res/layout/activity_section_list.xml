<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.drizzle.drizzledaily.ui.SectionListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/section_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <ListView
        android:id="@+id/section_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:scrollbars="none">

    </ListView>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/section_list_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:indicator="BallClipRotatePulse"
        app:indicator_color="@color/black"
        />
</FrameLayout>
