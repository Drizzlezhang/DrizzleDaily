<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/blackcolorPrimary"
              android:orientation="vertical"
             tools:context=".ui.fragments.AboutDeveloperFragment">
  <ImageView
      android:layout_width="90dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="20dp"
      android:scaleType="centerCrop"
      android:src="@mipmap/labal_icon"
      android:layout_height="90dp"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="开发者"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="DrizzleZhang"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="版本号"/>
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:id="@+id/about_dev_versionname"/>
    <Button
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="80dp"
        android:id="@+id/check_version_btn"
        android:background="@drawable/cardpress"
        android:textSize="20sp"
        android:gravity="center"
        android:text="检测新版本"/>
    <Button
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="80dp"
        android:id="@+id/suggestion_btn"
        android:background="@drawable/cardpress"
        android:textSize="20sp"
        android:gravity="center"
        android:text="意见反馈"/>
</LinearLayout>
