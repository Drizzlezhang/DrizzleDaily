<resources>

	<!-- Base application theme. -->
	<!--TEAL主题 原色-->
	<style name="TealAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimary</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
	</style>
	<!--red主题 火焰红-->
	<style name="RedAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/redcolorPrimary</item>
		<item name="colorPrimaryDark">@color/redcolorPrimaryDark</item>
		<item name="colorAccent">@color/redcolorPrimary</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
	</style>
	<!--blue主题 冷酷蓝-->
	<style name="BlueAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/bluecolorPrimary</item>
		<item name="colorPrimaryDark">@color/bluecolorPrimaryDark</item>
		<item name="colorAccent">@color/bluecolorPrimary</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
	</style>
	<!--black主题 高级黑-->
	<style name="BlackAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/blackcolorPrimary</item>
		<item name="colorPrimaryDark">@color/blackcolorPrimaryDark</item>
		<item name="colorAccent">@color/blackcolorPrimary</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
	</style>
	<!--black主题 高级黑-->
	<style name="MainBlackAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/blackcolorPrimary</item>
		<item name="colorPrimaryDark">@color/blackcolorPrimaryDark</item>
		<item name="colorAccent">@color/blackcolorPrimary</item>
	</style>

	<style name="PhotoBlackAppTheme"
		parent="MainBlackAppTheme">
		<item name="android:textColorPrimary">@color/white</item>
	</style>

	<style name="main_animation_translucent_translate"
		parent="@android:style/Animation.Translucent">
		<item name="android:windowExitAnimation">@anim/bottom_out</item>
		<item name="android:windowEnterAnimation">@anim/bottom_in</item>
	</style>

	<!--orange主题 热烈橙-->
	<style name="OrangeAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/orangecolorPrimary</item>
		<item name="colorPrimaryDark">@color/orangecolorPrimaryDark</item>
		<item name="colorAccent">@color/orangecolorPrimary</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
	</style>

	<style name="MainOrangeAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/orangecolorPrimary</item>
		<item name="colorPrimaryDark">@color/orangecolorPrimaryDark</item>
		<item name="colorAccent">@color/orangecolorPrimary</item>
	</style>
	<!--设置activity切换动画-->
	<style name="animation_translucent_translate"
		parent="@android:style/Animation.Translucent">
		<item name="android:windowEnterAnimation">@anim/right_in</item>
		<item name="android:windowExitAnimation">@anim/right_out</item>
	</style>
	<!--green主题 生命绿-->
	<style name="GreenAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/greencolorPrimary</item>
		<item name="colorPrimaryDark">@color/greencolorPrimaryDark</item>
		<item name="colorAccent">@color/greencolorPrimary</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
	</style>
	<!--purple主题 高贵紫-->
	<style name="PurpleAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/purplecolorPrimary</item>
		<item name="colorPrimaryDark">@color/purplecolorPrimaryDark</item>
		<item name="colorAccent">@color/purplecolorPrimary</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
	</style>
	<!--yellow主题 香蕉黄-->
	<style name="YellowAppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/yellowcolorPrimary</item>
		<item name="colorPrimaryDark">@color/yellowcolorPrimaryDark</item>
		<item name="colorAccent">@color/yellowcolorPrimary</item>
		<item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>

	<style name="start_animation_translucent_translate"
		parent="@android:style/Animation.Translucent">
		<item name="android:windowExitAnimation">@anim/alpha_out</item>
		<item name="android:windowEnterAnimation">@anim/alpha_in</item>
	</style>

	<style name="StartTheme.NoActionBar"
		parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/nocolor</item>
		<item name="colorPrimaryDark">@color/black</item>
		<item name="colorAccent">@color/black</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowAnimationStyle">@style/start_animation_translucent_translate</item>
	</style>

	<style name="AppTheme.AppBarOverlay"
		parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay"
		parent="ThemeOverlay.AppCompat.Dark"/>

	<style name="TextAppearance.Collapsing"
		parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/collsping_text_size</item>
		<item name="android:ellipsize">none</item>
		<item name="android:singleLine">false</item>
	</style>

</resources>
